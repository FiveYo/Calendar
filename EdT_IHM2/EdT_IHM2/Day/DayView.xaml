<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EdT_IHM2.DayView"
             xmlns:local="clr-namespace:EdT_IHM2">
    <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Label x:Name="dayOfWeek" HorizontalOptions="Center"/>
                <Label x:Name="dayNumber" HorizontalOptions="Center"/>
            </StackLayout>
            <local:DayLayout x:Name="dayLayout" Grid.Row="1"/>
        </Grid>
    </ContentView.Content>
</ContentView>
