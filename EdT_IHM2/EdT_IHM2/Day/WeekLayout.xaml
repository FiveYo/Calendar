<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EdT_IHM2.Day.WeekLayout"
             xmlns:local="clr-namespace:EdT_IHM2.Day">
    <ContentView.Content>
        <StackLayout>
            <Grid x:Name="DaysView" HeightRequest="150" VerticalOptions="StartAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <ScrollView x:Name="scroll">
                <AbsoluteLayout x:Name="Days">
                </AbsoluteLayout>
            </ScrollView>
        </StackLayout>
    </ContentView.Content>
</ContentView>
