    <ContentView.Content>
        <!--<StackLayout>-->
        <Grid HeightRequest="150" BackgroundColor="Silver">
            <Grid.ColumnDefinitions>
                <!-- L'étoile est pour la proportionnalité, sans l'étoile je dois savoir la taille de l'écran -->
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label ClassId="0" Text="Semaine" x:Name="temps" Grid.Column="0" VerticalOptions="Center"/>
            <!--<Image ClassId="2" x:Name="img" Source="poubelle.png" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1" HeightRequest="100" Margin="10"></Image>-->
            <Image ClassId="3" x:Name="imgPlus" Source="plus.png" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="2" HeightRequest="100" Margin="10"></Image>
            <Image ClassId="1" x:Name="param" Source="parameter.png" VerticalOptions="Center" HorizontalOptions="Center"  Grid.Column="3" HeightRequest="100" Margin="10"/>
        </Grid>
        <!--</StackLayout>-->
    </ContentView.Content>
</ContentView>


